@using Ecart.Models
@model Login
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V16</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/images/icons/favicon.ico")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/bootstrap/css/bootstrap.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/fonts/Linearicons-Free-v1.0.0/icon-font.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/animate/animate.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/css-hamburgers/hamburgers.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/animsition/css/animsition.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/select2/select2.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/vendor/daterangepicker/daterangepicker.css")
    <!--===============================================================================================-->
    @Styles.Render("~/LoginContent/css/util.css")
    @Styles.Render("~/LoginContent/css/main.css")
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('/LoginContent/images/test2.jpg'); width: 100%; height:100% ">
            <div class="wrap-login100 p-t-30 p-b-50">
                <section class="forms-section">
                    @*<h1 class="section-title">Animated Forms</h1>*@
                    <div style="padding-top: 0px; margin-top: 2px">
                        <img src="/LoginContent/images/LoginLogo1.png" alt="Girl in a jacket" width="300" height="250">
                    </div>
                    <div class="forms" style="padding-top:0px;margin-top:0px;">
                        <div class="form-wrapper is-active">
                            <button type="button" class="switcher switcher-login">
                                Login
                                <span class="underline"></span>
                            </button>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form form-login", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <legend>Please, enter your email and password for login.</legend>
                                    <div class="input-block">
                                        <label for="login-email">E-mail</label>
                                        @Html.TextBoxFor(m => m.UserName)
                                    </div>
                                    <div class="input-block">
                                        <label for="login-password">Password</label>
                                        @Html.PasswordFor(m => m.Password)
                                    </div>
                                </fieldset>
                                <button type="submit" class="btn-login">Login</button>
                            }
                        </div>
                        <div class="form-wrapper">
                            <button type="button" class="switcher switcher-signup">
                                Sign Up
                                <span class="underline"></span>
                            </button>
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form form-signup", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                                    <div class="input-block">
                                        <label for="signup-email">E-mail</label>
                                        @Html.TextBoxFor(m => m.UserName, new { type = "email" })
                                    </div>
                                    <div class="input-block">
                                        <label for="signup-password">Password</label>
                                        @Html.PasswordFor(m => m.Password)
                                    </div>
                                    <div class="input-block">
                                        @Html.DropDownListFor(m => m.UserRole, new List<SelectListItem>
    { new SelectListItem { Text = "Admin", Value = "1"},
      new SelectListItem { Text = "User", Value = "2"}
      }, "Select Role")
                                    </div>
                                </fieldset>
                                <button type="submit" class="btn-signup">Continue</button>
                            }
                        </div>
                    </div>
                </section>
                <</div>
            </div>
        </div>
    <script>
        const switchers = [...document.querySelectorAll('.switcher')]

        switchers.forEach(item => {
            item.addEventListener('click', function () {
                switchers.forEach(item => item.parentElement.classList.remove('is-active'))
                this.parentElement.classList.add('is-active')
            })
        })

    </script>

                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/jquery/jquery-3.2.1.min.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/animsition/js/animsition.min.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/bootstrap/js/popper.js")
                @Scripts.Render("~vendor/bootstrap/js/bootstrap.min.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/select2/select2.min.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/daterangepicker/moment.min.js")
                @Scripts.Render("~LoginContent/vendor/daterangepicker/daterangepicker.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/vendor/countdowntime/countdowntime.js")
                <!--===============================================================================================-->
                @Scripts.Render("~LoginContent/js/main.js")

</body>
</html>